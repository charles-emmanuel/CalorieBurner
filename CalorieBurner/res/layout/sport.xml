<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  tools:context=".Sport">
  
 
  
  
  <TextView
      android:id="@+id/txt"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
    android:textSize="17sp"
    android:textColor="@color/blue"
    android:text="Valeur de la met "/>
  
  <TextView
      android:id="@+id/testsport"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
    android:textSize="17sp"
    android:textColor="@color/blue"
    android:text="Valeur de la met "/>
  
 
 
  <Spinner 
    android:id="@+id/spinnerRespondFor" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:textSize="22sp"
    android:prompt="@string/spinner_sport"/>
  
  
  <LinearLayout

    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   
      
      <Button 
      android:id="@+id/okButton"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:text="valeur met"
      style="@style/greenbutton"

      />
    <Button 
      android:id="@+id/cancelButton"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:text="retour en arrière"
       style="@style/btnStyleOrange"/>
    
    
   
    
     
  </LinearLayout>
     
  
  <TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/txt"
	    />
  
  
  <Chronometer
		android:id="@+id/chrono"
		android:layout_gravity="center"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#33B5E5"
		android:textSize="100sp"
		
	    />
  
  
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
  
       
       <Button android:text="Start" 
        android:id="@+id/startchrono"
        android:layout_width="wrap_content" 
     	android:layout_height="wrap_content" 
    	android:layout_weight="1"
        style="@style/greenbutton" />
      
      
      <Button android:text="Stop" 
        android:id="@+id/stopchrono"
        android:layout_width="wrap_content" 
      	android:layout_height="wrap_content" 
        android:layout_weight="1"
        style="@style/redbutton" />
      
      
      <Button android:text="Reset" 
         android:id="@+id/resetchrono"
         android:layout_width="wrap_content" 
     	 android:layout_height="wrap_content" 
         android:layout_weight="1"    
         style="@style/orangebutton" />
      <!-- répartion du poids des boutons avec le weight -->
      </LinearLayout>  

 
   <!-- 
   <Button android:text="Résultats" 
          
          android:id="@+id/afficherresultats"
          android:layout_width="match_parent" 
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp" 
          style="@style/orangebutton"
          android:width="80dp" />
     -->
    

</LinearLayout>