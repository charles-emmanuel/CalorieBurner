        <TextView
            android:id="@+id/remaining_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true" />

         <TextView
            android:id="@+id/remaining_budget"
            android:layout_width="wrap_content"
