<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CaloriesSummaryActivity" 
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:background="@color/blue" />  
            
        
        
        <TextView
         	android:padding="30dp"
            android:id="@+id/meal_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"        
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:gravity="center" 
            android:text="@string/meal_summary" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:background="@color/blue" />



        <ListView
            android:id="@+id/selected_fooditem"
            android:padding="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:orientation="vertical" 
            android:textSize="17sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:background="@color/blue" />

        <TextView
            android:padding="30dp"
            android:textSize="50sp"
            android:id="@+id/total_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true" />

        

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:background="@color/blue" />
         
            
       
       
        <TextView
            
            android:layout_width="289dp"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:gravity="center" 
            android:text="Si je dÃ©cide de faire du sport ?" />
      
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:background="@color/blue" />  
            
        
          <Spinner 
            android:padding="10dp"
    		android:id="@+id/spinnerRespondForDiet" 
    		android:layout_width="fill_parent"
   			android:layout_height="wrap_content"
			android:background="@color/vert"
    		android:textSize="22sp"
    		android:prompt="@string/spinner_sport"/>
          
          
          
           
          
           
          

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip">
            
        </View>
    </LinearLayout>

</ScrollView>