<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  tools:context=".ActivitesPhysiques"
  android:background="@drawable/fondsport">"
  
 
  <!-- a supprimer -->
  
  <TextView
      android:id="@+id/txt"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
    android:textSize="17sp"
    android:textColor="@color/white"
   />
  
  <TextView
      android:id="@+id/testsport"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
    android:textSize="17sp"
    android:textColor="@color/white"
/>
  <TextView
      android:id="@+id/essaitv"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center" 
    android:textSize="17sp"
    android:textColor="@color/blue"
/>
  
 <!-- a supprimer -->
 
  <Spinner 
    android:id="@+id/spinnerRespondFor" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:divider="@color/barreseparation"
    android:textSize="22sp"
    android:prompt="@string/spinner_sport"/>
  
 
  
  <TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/txt"
	    android:textColor="#33B5E5"
	    android:textSize="50sp"
	   
	    />
  
  
   <chronoFiles.Chronometer
        android:id="@+id/chronometer1"
 		android:layout_gravity="center"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
    </chronoFiles.Chronometer>
  
  
   
  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_margin="10dp">

     
       <ImageButton
           android:id="@+id/imageplay"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:background="@android:color/transparent"
           android:adjustViewBounds="true"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_action_play_over_video" >

 		</ImageButton>

       <ImageButton
           android:id="@+id/imagepause"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:background="@android:color/transparent"
           android:adjustViewBounds="true"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_action_pause_over_video" />
 
       <ImageButton
           android:id="@+id/imagestop"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:background="@android:color/transparent"
           android:adjustViewBounds="true"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_action_stop" >
    	
    	</ImageButton>
 
       
   </LinearLayout>    	
 


 
       

</LinearLayout>